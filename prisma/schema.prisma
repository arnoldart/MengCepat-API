datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserAccount {
  id                  Int @default(autoincrement()) @id
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  eCommerceAccount    String
  eCommerceUsername   String
  transactions        transactions[]
}

model transactions {
  id                  Int @default(autoincrement()) @id
  resi                Int
  user                UserAccount @relation(fields: [UserId], references: [id])
  UserId              Int
  DestinationDetails  DestinationDetails @relation(fields: [TransactionId], references: [id])
  SenderProfile       SenderProfile @relation(fields: [TransactionId], references: [id])
  RecipientProfiles   RecipientProfiles @relation(fields: [TransactionId], references: [id])
  TransactionId       Int
  Track               Track[]
}

model DestinationDetails {
  id                Int @default(autoincrement()) @id
  CityId            Int
  ProvinceId        Int
  Province          String
  type              String
  CityName          String
  PostalCode        Int
  UserTransaction   transactions[]
}

model SenderProfile {
  id                Int @default(autoincrement()) @id
  name              String
  address           String
  PhoneNumber       Int?
  UserTransaction   transactions[]
}

model RecipientProfiles {
  id Int @default(autoincrement()) @id
  name String
  PhoneNumber Int?
  UserTransaction   transactions[]
}

model Track {
  id        Int @default(autoincrement()) @id
  user      transactions @relation(fields: [UserId], references: [id])
  UserId    Int
  Oclock    Int
  Location  String
}

